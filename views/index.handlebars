<div class='row'>
  <div class='col'>
    <h2>Burgers CREATED!</h2>

    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </div>
  <div class='col'>

    <h2>Burgers that's been DEVOURED!</h2>

    {{#each burgers}}
    {{#if devoured}}
    {{> burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </div>
</div>

<h2>ADD a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">SUBMIT</button>
  <p>Create a burger you want to eat and click the "Submit" button.</p>
</form>